@model BloodDonor.Web.ViewModels.Locations.LocationViewModel


@{
    this.ViewData["Title"] = "Locations";
}

<h1>@this.ViewData["Title"]</h1>

<script src="/lib/tinymce/tinymce.min.js" type="text/javascript"></script>
<script type="text/javascript">
    tinymce.init({
        selector: "textarea",
        plugins: [
            "image paste table link code media"
        ]
    });
</script>

<form method="post" asp-action="LabAddresses">
    <div>
        <label asp-for="TownName"></label>
        <input asp-for="TownName" class="form-control" />
        <span asp-validation-for="TownName" class="text-danger"></span>
    </div>

   
    <hr />
    <input type="submit" class="btn btn-primary" />
</form>





